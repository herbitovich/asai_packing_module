<odoo>
    <record id="view_packing_order_tree" model="ir.ui.view">
        <field name="name">packing.order.tree</field>
        <field name="model">packing.order</field>
        <field name="arch" type="xml">
            <list string="Packing Orders">
                <field name="name"/>
                <field name="operator_id"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_packing_order_form" model="ir.ui.view">
        <field name="name">packing.order.form</field>
        <field name="model">packing.order</field>
        <field name="arch" type="xml">
            <form string="Packing Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="operator_id"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Details">
                            <field name="details_ids">
                                <list string="Details">
                                    <field name="name"/>
                                    <field name="is_packed"/>
                                    <field name="is_defective"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_packing_detail_form" model="ir.ui.view">
        <field name="name">packing.detail.form</field>
        <field name="model">packing.detail</field>
        <field name="arch" type="xml">
            <form string="Packing Detail">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="order_id"/>
                        <field name="is_packed"/>
                        <field name="is_defective"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
